SELECT dbo_Patient_Table.PatientTrustID, dbo_Patient_Table.LastName, dbo_Patient_Table.FirstName, dbo_Patient_Table.DoB, Left([Dbo_Gender_Table].[Gender],1) AS Sex, dbo_Patient_Table.CreatedByID, dbo_Patient_Table.CreatedDate, Patients.s_StatusOverall, Patients.InternalPatientID, Patients.MokaCreated, Patients.MokaCreatedBy, Patients.BookinLastName, Patients.BookinFirstName, Patients.BookinSex, Patients.BookinDOB, Patients.BookinCreatedBy, Patients.BookinCreatedDate, dbo_FamilyNotesTrace_Table.NotesTraceID
FROM ((dbo_Patient_Table LEFT JOIN dbo_Gender_Table ON dbo_Patient_Table.GenderID = dbo_Gender_Table.GenderID) LEFT JOIN dbo_FamilyNotesTrace_Table ON dbo_Patient_Table.FamilyID = dbo_FamilyNotesTrace_Table.FamilyID) LEFT JOIN Patients ON dbo_Patient_Table.PatientTrustID = Patients.PatientID
WHERE (((dbo_Patient_Table.PatientTrustID)=[Patient ID?]));
