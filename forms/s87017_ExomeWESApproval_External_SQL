SELECT NGSTest.InternalPatientID, Patients.PatientID, dbo_Patient_table.LastName, dbo_Patient_table.FirstName, dbo_Patient_table.DoB, Patients.BookinSex AS Gender, Referral.Referral, NGSTest.DateRequested, Checker.Name AS [Referring Clinician], NGSTest.BookingAuthorisedByID, NGSTest.BookingAuthorisedDate, Checker.UserName AS ReferrerLogin
FROM (((Status INNER JOIN (Patients INNER JOIN NGSTest ON Patients.InternalPatientID = NGSTest.InternalPatientID) ON Status.StatusID = Patients.s_StatusOverall) INNER JOIN Referral ON NGSTest.ReferralID = Referral.ReferralID) INNER JOIN Checker ON NGSTest.BookBy = Checker.Check1ID) INNER JOIN dbo_Patient_table ON Patients.PatientID = dbo_Patient_table.PatientTrustID
WHERE (((Patients.s_StatusOverall)=1202218799) AND ((Checker.Active)=3) AND ((NGSTest.StatusID)=1202218801))
ORDER BY NGSTest.DateRequested;
