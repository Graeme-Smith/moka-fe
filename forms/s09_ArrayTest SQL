SELECT TOP 1 ArrayTest.ArrayTestID,
             ArrayTest.InternalPatientID,
             ArrayTest.StatusID,
             ArrayTest.ArrayResultCodeID,
             ArrayTest.ArrayResult,
             ArrayTest.ArrayResultComment,
             ArrayTest.DNALabellingID,
             ArrayTest.Check0ID,
             ArrayTest.Check0Date,
             ArrayTest.Check05ID,
             ArrayTest.Check05Date,
             ArrayTest.Check1ID,
             ArrayTest.Check1Date,
             ArrayTest.Check15ID,
             ArrayTest.Check15Date,
             ArrayTest.Check2ID,
             ArrayTest.Check2Date,
             ArrayTest.Check3ID,
             ArrayTest.Check3Date,
             ArrayTest.Check4ID,
             ArrayTest.Check4Date,
             ArrayTest.Check5ID,
             ArrayTest.Check5Date,
             ArrayTest.ArrayResultDate,
             ArrayTest.ReportID,
             ArrayTest.ReportDate,
             ArrayTest.RequestedDate,
             ArrayTest.ArrayResultBuild,
             ArrayTest.SpecimenNo,
             ArrayTest.Priority,
             Referral.ReferralID,
             Referral.Referral,
             Patients.PatientID,
             [Patients].[BookinLastName] & " " & [Patients].[BookinFirstname] AS Name,
             Left([PatientID],6) AS FamilyTrustID,
             Patients.ePGDCycleID
        FROM (ArrayTest
  INNER JOIN Referral
          ON ArrayTest.ReferralID = Referral.ReferralID)
  INNER JOIN Patients
          ON ArrayTest.InternalPatientID = Patients.InternalPatientID;
