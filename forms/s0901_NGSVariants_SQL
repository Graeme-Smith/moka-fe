SELECT NGSVariant.*, Chromosome.Chr, NGSVariantComment.Comment, NGSVariantACMG.NGSVariantACMGID, Chromosome.Sorting, NGSVariant.Position_hg19, Chromosome_1.Chr AS Chr_b38
FROM (((NGSVariant INNER JOIN Chromosome ON NGSVariant.ChrID = Chromosome.ChrID) LEFT JOIN NGSVariantComment ON NGSVariant.NGSVariantCommentID = NGSVariantComment.NGSVariantCommentID) LEFT JOIN NGSVariantACMG ON NGSVariant.NGSVariantID = NGSVariantACMG.NGSVariantID) LEFT JOIN Chromosome AS Chromosome_1 ON NGSVariant.chr_id_38 = Chromosome_1.ChrID
ORDER BY NGSVariant.gnomad_Hom_count, Chromosome.Sorting, NGSVariant.Position_hg19;
